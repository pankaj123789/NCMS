@model NAATI.BusinessServices.API.Models.UserModel
@{
    Layout = "~/Views/Account/_Layout.cshtml";
}
<p class="login-box-msg">We will send a new password to your email</p>
<form method="post">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Html.ValidationSummary()
        </div>
    }
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Login" })
        <i class="fa fa-user form-control-feedback"></i>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
        </div><!-- /.col -->
    </div>
</form>
<div class="social-auth-links text-center">
    <p>- OR -</p>
    <a href="@Url.Action("Signin")">Go to login page</a>
</div>