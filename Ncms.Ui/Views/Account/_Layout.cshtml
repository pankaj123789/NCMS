@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Log in | DPS Jobs</title>
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

	@*Source Sans Pro from Google Fonts*@
	<link href="~/Scripts/AdminLTE/plugins/googleapis/googleapis.css" rel="stylesheet" />
	@*Bundle CSS, assuming includes Bootstrap CSS *@
	@Styles.Render("~/Content/bootstrap")
	@Styles.Render("~/Content/site")
	<!-- Font Awesome Icons -->
	<link href="~/Scripts/AdminLTE/plugins/font-awesome/css/all.css" rel="stylesheet" type="text/css" />
	<!-- Ionicons -->
	<link href="~/Scripts/AdminLTE/plugins/ionicons/ionicons.css" rel="stylesheet" type="text/css" />
	<!-- iCheck -->
	<link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/iCheck/square/blue.css">
	<link rel="stylesheet" href="~/Content/AdminLTE/css/AdminLTE.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo bg-yellow">
            <b>DPS</b> Jobs
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            @RenderBody()
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    @* Bundles assume jquery 2.1.3 and Bootstrap 3 *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- iCheck -->
    <script src="~/Scripts/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
