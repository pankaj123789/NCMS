@model MyNaati.Ui.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change My Password";
    ViewBag.BreadCrumb = new List<Tuple<string, string>>
    {
        new Tuple<string, string>("My Account", Url.Action("Index", "Account")),
        new Tuple<string, string>("Change My Password", null)
    };
}
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-primary">Change My Password</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    <p class="form-control-static">* A password must contain a minimum of @ViewBag.PasswordLength characters and include at least one symbol, one lower case letter, one upper case letter and one number (0-9).</p>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Change Password</button>
                </div>
            }
        </div>
    </div>
</div>
<script>
	function showMessage() {
		if (typeof($) === 'undefined' || typeof(toastr) === 'undefined') {
			return setTimeout(showMessage, 500);
		}

		$(document).ready(function () {
			if ('@ViewBag.Reason' != '') {
				return toastr.error('@ViewBag.Reason');
			}
		});
	}

	showMessage();
</script>