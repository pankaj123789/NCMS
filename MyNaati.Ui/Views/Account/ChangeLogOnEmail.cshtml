@model MyNaati.Ui.Models.ChangePrimaryEmailModel
@{
    ViewBag.Title = "Change Logon Email";
  
}

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-primary">Change Logon Email</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="row">
        
        
        <div class="col-xs-4">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <p class="form-control-static">Please note that this will change the logon email from @ViewBag.PrimaryEmail to @ViewBag.SecondaryEmail.</p>
                    <br />
                    @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.Password, new {@class = "form-control", type = "password"})
                </div>
                <div class="form-group">
                    <p class="form-control-static">*The logon email is also used for correspodance.</p>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Change Email</button>
                </div>
            }
        </div>
    </div>
</div>
