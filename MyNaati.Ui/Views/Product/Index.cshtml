@using MyNaati.Ui.Common
@using MyNaati.Ui.ViewModels.Home
@{
    ViewBag.Title = "Post Credential Products";
    Layout = "~/Views/Shared/MasterPages/_Layout.cshtml";
    ViewBag.BreadCrumb = new List<Tuple<string, string>>
    {
        new Tuple<string, string>("Products", string.Empty)
    };

    var links = new List<MenuLinkModel>
    {
        new MenuLinkModel("NAATI Certificates", Url.Action("Index", "Certificate"), MenuLinkModel.LinkIconType.Image, "investment.png"),
        new MenuLinkModel("ID Cards", Url.Action("Index", "IdCard"), MenuLinkModel.LinkIconType.Image, "id-card-3.png"),
        new MenuLinkModel("Translator Stamps", Url.Action("Index", "Stamp"), MenuLinkModel.LinkIconType.Image, "stamp-1.png")
    };
}
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-primary">Post Credential Products</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>For new and experienced translators or interpreters we offer a range of products that assist people to easily identify you as a professional, including:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @{ Html.RenderPartial("_MenuLinksPartial", links); }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>Practioners applying for revalidation will receive certain products for free. Please <a href="@Url.ExternalUrlFromConfig("RevalidationProducts")">click here</a> for more details.</p>
        </div>
    </div>
</div>
