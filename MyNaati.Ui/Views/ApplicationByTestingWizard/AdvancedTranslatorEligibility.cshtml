@model MyNaati.Ui.ViewModels.ApplicationByTestingWizard.AdvancedTranslatorEligibilityModel
@{
    ViewBag.Title = "Application for Accreditation by Testing";
    ViewBag.Subtitle = "Advanced Translator Testing Eligibility";
    Layout = "~/Views/Shared/MasterPages/_ApplicationWizardLayout.cshtml";
    ViewBag.BreadCrumb = new List<Tuple<string, string>>
    {
        new Tuple<string, string>("Apply", Url.Action("Index", "ApplicationForAccreditation")),
        new Tuple<string, string>("Accreditation by Testing", Url.Action("Index", "ApplicationByTestingWizard")),
        new Tuple<string, string>("New Application", string.Empty)
    };
}
@section Scripts
{
<script type="text/javascript">
    $(document).ready(function () {
        $(cancelButtons).show();
        $(previousButtons).show();
        $(nextButtons).show();
    });
</script>
}
<div class="row">
    <div class="col-lg-12">
        <p>You need to meet all of the following eligibility criteria.</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.HasDegree, new { id = "chkHasDegree" })
                <label for="chkHasDegree">I hold a degree (or higher) - in any field - from a recognised higher education institution <br />(supporting documentation required)</label>
            </label>
        </div>

        @for (int i = 0; i < Model.ProfessionalTranslatorCredentialList.Count(); i++)
        {
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => Model.ProfessionalTranslatorCredentialList[i].Selected, new { id = "chkCredential" + i })
                    <label for="@string.Format("chkCredential{0}", i)">I hold a NAATI Professional Translator credential @Model.ProfessionalTranslatorCredentialList[i].LanguageAndDirection</label>
                </label>
            </div>
        }
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.HasReference, new { id = "chkHasReference" })
                <label for="chkHasReference">I have provided employer reference(s) as evidence of work as a translator for a minimum of two years <br />Self employed practitioners need to provide a statutory declaration</label>
            </label>
        </div>
    </div>
</div>
