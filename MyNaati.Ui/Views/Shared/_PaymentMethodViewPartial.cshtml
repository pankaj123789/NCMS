@model MyNaati.Ui.ViewModels.Shared.PaymentMethodEditModel
@{
    var paymentMethod = Model.PaymentMethodSelectListItems.SingleOrDefault(e => int.Parse(e.Value) == Model.PaymentMethodId);
    var paymentMethodText = paymentMethod != null ? paymentMethod.Text : string.Empty;
}
<div class="row">
    <div class="col-sm-6">
        <h3 class="text-primary">Payment Method</h3>
        <p>@paymentMethodText</p>
    </div>
</div>
