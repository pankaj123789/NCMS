@{
    ViewBag.UseSideMenu = true;
    Layout = "~/Views/Shared/MasterPages/_WizardLayout.cshtml";

    var wizardModel = ViewBag.WholeWizardModel;
    var percentageComplete = (double)wizardModel.CompletedStepsCount / (double)wizardModel.UnskippedStepsCount * 100;
    var percentageCompleteText = string.Format("{0}%", Math.Round(percentageComplete, 0));
}
@section Head
{
    @RenderSection("Head", false)
}
@section Scripts
{
    @RenderSection("Scripts", false)
}
@section SideMenu
{
    @Html.Partial("_SideWizardMenu", (object)ViewBag.WholeWizardModel)
}
@section BeforeDefaultForm
{
    <div class="row">
    <div class="col-lg-12">
        <div class="progress progress-striped active">
            <div class="progress-bar" role="progressbar" aria-valuenow="@percentageComplete" aria-valuemin="0" aria-valuemax="100" style="width: @percentageCompleteText;">
                <span class="progress-text">@percentageCompleteText</span>
            </div>
        </div>
    </div>
</div>
}
@section AfterDefaultForm
{
    @RenderSection("AfterDefaultForm", false)
}
@RenderBody()
