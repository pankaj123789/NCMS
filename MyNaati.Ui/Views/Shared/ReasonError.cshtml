
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/MasterPages/_Layout.cshtml";

    ViewBag.BreadCrumb = new List<Tuple<string, string>>
{
new Tuple<string, string>("Error", string.Empty)
};

    var pathAndQuery = HttpContext.Current.Request.Url.PathAndQuery;
    var webHome = pathAndQuery.Split('/')[1];
}

@if (!User.Identity.IsAuthenticated)
{
    <ol class="breadcrumb">
        <li>
            <a href="/@webHome">Home</a>
        </li>
        <li class="active">Error</li>
    </ol>
    <hr>
    <div style="padding-left: 15px;">
        <h2>Sorry! Something went wrong.</h2>
        <div class="text-center wrapper-xl">
            <span class="fa fa-warning text-warning fa-5x"></span>
            <div class="text-center wrapper">
                <h4>
                    Reason: @ViewBag.ErrorMessage;
                </h4>
                <h4>
                    Please try again or contact <a href="mailto://info@naati.com.au">info@naati.com.au</a><br/>
                </h4>
            </div>
        </div>
    </div>
}
else
{
    <div style="padding-left: 15px;">
        <h2>Sorry! Something went wrong.</h2>
        <div class="text-center wrapper-xl">
            <span class="fa fa-warning text-warning fa-5x"></span>
            <div class="text-center wrapper">
                <h4>
                    Reason: @ViewBag.ErrorMessage;
                </h4>
                <h4>
                    Please try again or contact <a href="mailto://info@naati.com.au">info@naati.com.au</a><br />
                </h4>
            </div>
        </div>
    </div>
}





