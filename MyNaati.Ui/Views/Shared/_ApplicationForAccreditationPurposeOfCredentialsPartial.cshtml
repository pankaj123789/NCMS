@using MyNaati.Ui.Helpers
@model MyNaati.Ui.ViewModels.Shared.ApplicationForAccreditation.PurposeOfCredentialsModel
<div class="row">
    <div class="col-lg-12">
        <p>For what purpose are you seeking NAATI credentials?</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.ProfessionalQualification)
                @Html.LabelFor(m => Model.ProfessionalQualification)
            </label>
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.CommunityLanguage)
                @Html.LabelFor(m => Model.CommunityLanguage)
            </label>
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.SkillsAssessment)
                @Html.LabelFor(m => Model.SkillsAssessment)
            </label>
        </div>
    </div>
</div>
<div id="skillAssessmentDiv" class="row" @((Model.SkillsAssessment ? string.Empty : "style=\"display: none\"").ToMvcHtmlString())>
    <div class="col-lg-12">
        @{ Html.RenderPartial("_ApplicationForAccreditationSkillAssessmentPartial", Model); }
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => Model.Other)
                @Html.LabelFor(m => Model.Other)
            </label>
        </div>
    </div>
    <div class="col-sm-5">
        @Html.TextBoxFor(m => m.OtherDetails, new { @class = "form-control v-offset-xs-1" })
    </div>
</div>
