@model MyNaati.Ui.ViewModels.ApplicationByCourseWizard.CredentialDetailsModel
@if (Model.EditModel.ApprovedLanguages.Count == 1)
{
    <div class="col-lg-12">
        <p class="form-control-static">Note : If you wish to proceed with an application you should submit your application using the form on the NAATI website.</p>
    </div>
}
<div class="col-lg-12">
    @foreach (var approval in Model.EditModel.CourseApprovalFilteredList)
    {
        <div class="radio">
            <label>
                @Html.RadioButtonFor(x => x.EditModel.SelectedCourseApprovalId, approval.CourseApprovalId)
                @approval.LevelCategoryDirectionText
            </label>
        </div>
    }
</div>
