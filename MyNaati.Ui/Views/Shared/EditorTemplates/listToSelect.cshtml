@model int?

@using System.Collections
@using System.Web.Mvc;

@{
    bool hideLabel = (bool)(ViewData["HideLabel"] ?? false);
}

<div class="editorSet">
    @{
    var labelWidth = (ViewData["LabelWidth"] != null && ViewData["LabelWidth"] != string.Empty)
        ? ViewData["LabelWidth"].ToString()+"px" 
        : "100px";
    var fieldWidth = (ViewData["FieldWidth"] != null && ViewData["FieldWidth"] != string.Empty)
        ? ViewData["FieldWidth"].ToString()+"px" 
        : "160px";
    }
    @if (!hideLabel)
    {
        <div class="editorLabel" style="width:@labelWidth;">
            @Html.LabelFor(e => Model, @ViewData.ModelMetadata.DisplayName + ":")
        </div>
    }
    <div class="editorValue variableWidthField" style="width:@fieldWidth;">
        @Html.DropDownListFor(e => Model, new SelectList((IEnumerable<SelectListItem>)ViewData["List"], "Value", "Text", Model))
        @Html.ValidationMessageFor(e => Model, "*")
        @if (ViewData["Note"] != null)
        { <br />@ViewData["Note"] }
    </div>
</div>
