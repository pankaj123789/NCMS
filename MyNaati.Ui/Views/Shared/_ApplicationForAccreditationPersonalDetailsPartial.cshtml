@model MyNaati.Ui.ViewModels.Shared.ApplicationForAccreditation.PersonalDetailsModel
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.DropDownListFor(model => model.TitleId, Model.TitleList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.GivenName, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.GivenName, new { @class = "form-control" })
        </div>
        <div class="col-sm-6">
            <p class="form-control-static">
                Other names you have been known by:
                <br />
                e.g. maiden name, preferred name
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.OtherNames, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.OtherNames, new { @class = "form-control" })
        </div>
        @Html.LabelFor(model => model.AlternativeGivenName, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.AlternativeGivenName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FamilyName, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.FamilyName, new { @class = "form-control" })
        </div>
        @Html.LabelFor(model => model.AlternativeFamilyName, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.AlternativeFamilyName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.TextBox("DateOfBirth", Model.DateOfBirth != null ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : string.Empty, new { id = "DateOfBirth", @class = "form-control", type = "date", MinYear = DateTime.Now.Year - 100, MaxYear = DateTime.Now.Year - 10, DefaultYear = 1980 })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Gender</label>
        <div class="col-sm-3">
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.IsGenderMale, true, new { id = "IsGenderMaleTrue" })@Html.Label("IsGenderMaleTrue", "Male")
            </label>
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.IsGenderMale, false, new { id = "IsGenderMaleFalse" })@Html.Label("IsGenderMaleFalse", "Female")
            </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CountryId, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-3">
            @Html.DropDownListFor(model => model.CountryId, Model.CountryList, new { @class = "form-control" })
        </div>
    </div>
</div>
