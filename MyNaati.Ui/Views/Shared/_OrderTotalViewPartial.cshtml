@model MyNaati.Ui.ViewModels.Shared.OrderTotalViewModel
<div class="row">
    <div class="col-lg-12">
        <h3 class="text-primary">Order Total</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>The total cost of your order is shown below including postage, handling and GST where applicable.</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="bg-primary">
                <tr>
                    <th>Product</th>
                    @if (!Model.IsIdCard)
                    {
                        <th>Skill</th>
                        <th>Level</th>
                        <th>Direction</th>
                        <th>Expiry</th>
                    }
                    <th>Quantity</th>
                    <th>Per Unit ($AUD)</th>
                    <th>Total ($AUD)</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product</td>
                        @if (!Model.IsIdCard)
                        {
                            <td>@item.Skill</td>
                            <td>@item.Level</td>
                            <td>@item.Direction</td>
                            <td>@string.Format("{0:dd MMM yyyy}", item.Expiry)</td>
                        }
                        <td>@item.Quantity</td>
                        <td class="MoneyField">@Html.DisplayFor(e => item.UnitPrice)</td>
                        <td class="MoneyField">@Html.DisplayFor(e => item.TotalPrice)</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                    <tr>
                        <td>Total</td>
                        @if (!Model.IsIdCard)
                        {
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        }
                        <td>@Model.Items.Sum(e => e.Quantity)</td>
                        <td>&nbsp;</td>
                        <td class="currency">@Html.DisplayFor(e => Model.TotalPrice)</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
